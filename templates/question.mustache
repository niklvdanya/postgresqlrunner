{{!
    @template qtype_postgresqlrunner/question

    PostgreSQL Runner question template.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * questiontext - The question text
    * textarea - The HTML for the textarea input
    * validation - The validation error, if any
}}
<div class="qtype_postgresqlrunner">
    <div class="qtext">
        {{{questiontext}}}
    </div>
    {{^hasplaceholder}}
    <div class="ablock">
        {{{textarea}}}
    </div>
    {{/hasplaceholder}}
    {{#validation}}
    <div class="validationerror">
        {{validation}}
    </div>
    {{/validation}}
</div>